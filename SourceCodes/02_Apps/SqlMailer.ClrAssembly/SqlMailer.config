<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <smtp>
        <enableSsl>false</enableSsl>
        <host>localhost</host>
        <port>25</port>
        <defaultCredentials>true</defaultCredentials>
    </smtp>

    <applications>
        <application>
            <name>SQL Mailer</name>
            <sender>sender@local</sender>
            <recipients>
                <recipient>recipient@local</recipient>
            </recipients>
            <subject>Email Subject</subject>
            <isBodyHtml>true</isBodyHtml>
        </application>
    </applications>
</configuration>